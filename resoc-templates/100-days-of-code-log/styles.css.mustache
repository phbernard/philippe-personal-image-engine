
@import url('https://fonts.googleapis.com/css2?family=Anton&family=Raleway&display=swap');
.wrapper {
  display: flex;
  flex-direction: column;
  background: rgb(11,35,238);
  background: linear-gradient(70deg, rgba(11,35,238,1) 0%, rgba(246,52,12,1) 100%);
  font-family: 'Raleway';
  color: white;
}
main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
h1 {
  margin: 2vh 20vw 10vh 3vw;
  font-size: 10vh;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  letter-spacing: 0.04em;
}
header {
  flex: 0 0;
  min-height: 10vh;
  display: flex;
  padding: 2vh 3vw 2vh 3vw;
  justify-content: space-between;
}
footer {
  flex: 0 0;
  min-height: 10vh;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 2vh 3vw 2vh 3vw;
}
footer img {
  width: auto;
  height: 100%;
  border-radius: 50%;
  margin-left: 3vw;
}
h2 {
  margin: 0;
  font-family: 'Raleway';
  font-size: 7vh;
}
